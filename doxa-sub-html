<!-- JS: Kliko thumbnail për kryesoren -->
<script>
document.addEventListener('click', function (e) {
    const thumb = e.target.closest('.product-gallery img.thumb');
    if (!thumb) return;

    const article = thumb.closest('.product');
    const mainImage = article.querySelector('.product-main-image');
    if (!mainImage) return;

    mainImage.src = thumb.src;
    if (thumb.alt) mainImage.alt = thumb.alt;
});
</script>

<!-- JS: Zoom kryesoren -->
<script>
document.addEventListener('DOMContentLoaded', () => {
    const mainImages = document.querySelectorAll('.product-main-image');
    mainImages.forEach(img => {
        img.addEventListener('click', () => {
            img.classList.toggle('zoomed');
        });
    });
});
</script>

