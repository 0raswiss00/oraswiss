<script>
document.addEventListener('DOMContentLoaded', function () {
  // pÃ«r Ã§do produkt nÃ« faqe
  document.querySelectorAll('.product').forEach(function (product) {
    const mainImage = product.querySelector('.product-main-image');
    const thumbs = product.querySelectorAll('.product-gallery img.thumb');

    if (!mainImage || !thumbs.length) return;

    thumbs.forEach(function (thumb) {
      thumb.addEventListener('click', function () {
        mainImage.src = thumb.src;
        if (thumb.alt) {
          mainImage.alt = thumb.alt;
        }
      });
    });
  });
});
</script>
    
<script>
// ZOOM SCRIPT
document.addEventListener('DOMContentLoaded', () => {
    const mainImages = document.querySelectorAll('.product-main-image');

    mainImages.forEach(img => {
        img.addEventListener('click', () => {
            img.classList.toggle('zoomed');
        });
    });
});
</script>
<script>
function searchProducts() {
    const input = document.getElementById("searchBar").value.toLowerCase();
    const products = document.querySelectorAll(".product");

    products.forEach(product => {
        const text = product.innerText.toLowerCase();
        product.style.display = text.includes(input) ? "block" : "none";
    });
}
</script>

<script>
// LIKE pÃ«r Ã§do part veÃ§ e veÃ§
document.addEventListener('DOMContentLoaded', function () {
  document.querySelectorAll('.like-btn').forEach(function (btn) {
    const partId = btn.getAttribute('data-part-id') || 'default-part';

    // nÃ«se ky part Ã«shtÃ« pÃ«lqyer mÃ« parÃ«
    if (localStorage.getItem('liked_' + partId) === 'true') {
      btn.classList.add('active');
    }

    btn.addEventListener('click', function () {
      btn.classList.toggle('active');
      const isLiked = btn.classList.contains('active');
      localStorage.setItem('liked_' + partId, isLiked);
    });
  });

  // SHARE â€“ thjesht kopjon linkun ose hap share API
  document.querySelectorAll('.share-btn').forEach(function (btn) {
    btn.addEventListener('click', function () {
      if (navigator.share) {
        navigator.share({
          title: document.title,
          url: window.location.href
        }).catch(() => {});
      } else if (navigator.clipboard) {
        navigator.clipboard.writeText(window.location.href);
        alert('Link copied! Paste it anywhere to share.');
      } else {
        alert('Sharing not supported. Copy the link from the address bar.');
      }
    });
  });
});
</script>
    
<script>
document.querySelectorAll(".like-btn").forEach(function (btn) {

    // ID unike e produktit (vjen nga data-id)
    let id = btn.getAttribute("data-id");

    // NÃ«se produkti Ã«shtÃ« pÃ«lqyer mÃ« parÃ« â†’ ndrysho butonin
    if (localStorage.getItem("liked_" + id) === "true") {
        btn.innerText = "âœ“ Liked";
        btn.style.background = "#ff1a4d";
    }

    // Kur klikon butonin
    btn.addEventListener("click", function () {

        // NÃ«se nuk Ã«shtÃ« pÃ«lqyer â†’ pÃ«lqeje
        if (localStorage.getItem("liked_" + id) !== "true") {
            localStorage.setItem("liked_" + id, "true");
            btn.innerText = "âœ“ Liked";
            btn.style.background = "#ff1a4d";
            alert("U ruajt te Favorites â¤ï¸");
        } 
        else {
            // NÃ«se Ã«shtÃ« pÃ«lqyer â†’ hiqe
            localStorage.removeItem("liked_" + id);
            btn.innerText = "â¤ï¸ Like";
            btn.style.background = "#ff4d6d";
            alert("U hoq nga Favorites.");
        }
    });

});

